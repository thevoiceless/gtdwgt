<% provide(:title, "New Task") %>

<%= form_tag(:controller => 'task_lists', :action => 'add_task_to_list', :method => 'post') do %>
<div>
	List: <%= select :list, :list_id, @task_lists.collect { |t| [ t.title, t.id ] } %>
</div>
<div>
	Title: <%= text_field_tag "title", nil, { class: "boxsizingBorder" } %>
</div>
<div id="notes-area">
	Notes: <%= text_area_tag "notes", nil, { class: "boxsizingBorder" } %>
</div>
<div class="center">
	<%= submit_tag 'Save', { class: 'btn btn-success btn-large' } %>
</div>
<% end %>